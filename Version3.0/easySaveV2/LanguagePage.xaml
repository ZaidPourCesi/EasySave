<Window x:Class="easySaveV3.LanguagePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:easySaveV3"
        mc:Ignorable="d"
        Title="LanguagePage" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="LanguageLabel" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="30" TextDecorations="Underline">Languages</TextBlock>
        <ListBox x:Name="LanguageListBox" HorizontalAlignment="Center" Height="264" Margin="0,95,0,0" VerticalAlignment="Top" Width="253" HorizontalContentAlignment="Center" SelectionChanged="LanguageListBox_SelectionChanged" FontSize="15"/>
        <Button x:Name="Language_ReturnButton" Content="Return" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" Width="90" Height="25"  Click="Language_ReturnButton_Click" FontSize="16"/>
    </Grid>
</Window>
