        <ProgressBar HorizontalAlignment="Left" Height="21" Margin="10,389,0,0" VerticalAlignment="Top" Width="355" Minimum="0" Maximum="100" x:Name="savepbar"/>
        <TextBlock Text="{Binding ElementName=savepbar, Path=Value, StringFormat={}{0:0}%}"  Margin="173,391,584.6,2" Width="36" />
    </Grid>
</Window>
