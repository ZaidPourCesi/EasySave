        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:easySaveV3"
        mc:Ignorable="d"
        Title="ProgressBars" Height="450" Width="800"
        ContentRendered="Window_ContentRendered">
